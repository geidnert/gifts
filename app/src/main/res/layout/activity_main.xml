<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.solidparts.gifts.MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="My Gifts"
        android:id="@+id/button"
        android:onClick="onMyGifts"
        android:nestedScrollingEnabled="true"
        android:textSize="20dp"
        android:layout_below="@+id/msg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp"
        android:background="#99ff8b" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Others Gifts"
        android:id="@+id/button2"
        android:onClick="onOthersGifts"
        android:nestedScrollingEnabled="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#99ff8b" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to your gift organizer. v1.0"
        android:id="@+id/msg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Logout"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:background="#ff8b8d"
        android:onClick="onLogout" />
</RelativeLayout>
